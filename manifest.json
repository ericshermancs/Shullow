{
  "manifest_version": 3,
  "name": "Map POI Injector",
  "version": "1.1",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/detector.js",
        "content/modules/state.js",
        "content/modules/overlay.js",
        "content/modules/events.js",
        "content/main.js"
      ],
      "css": ["content/content.css"],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_end"
    },
    {
      "matches": ["<all_urls>"],
      "js": [
        "bridge/bridge-bundle.js"
      ],
      "world": "MAIN",
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "bridge/modules/*.js",
        "bridge/main.js",
        "bridge/bridge-bundle.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
